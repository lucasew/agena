<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidDemos" parent="Theme.Material3.DayNight">
        <!-- Primary brand color (fallback for pre-Android 12). -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color (fallback for pre-Android 12). -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar and navigation bar colors (use surface for Material You) -->
        <item name="android:statusBarColor" >?attr/colorSurface</item>
        <item name="android:navigationBarColor" >?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <!-- Enable dynamic colors for Material You (Android 12+) -->
        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.DayNight</item>
        <!-- Customize your theme here. -->
    </style>
</resources>