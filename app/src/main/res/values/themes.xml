<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidDemos" parent="Theme.Material3.DayNight">
        <!-- Primary brand color (fallback for pre-Android 12). -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color (fallback for pre-Android 12). -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar and navigation bar colors (use surface for Material You) -->
        <item name="android:statusBarColor" >?attr/colorSurface</item>
        <item name="android:navigationBarColor" >?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Enable dynamic colors for Material You (Android 12+) -->
        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.DayNight</item>
        <!-- Splash screen configuration (Android 12+) -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@android:color/system_neutral1_50</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_splash_icon</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AndroidDemos.NoActionBar" parent="Theme.AndroidDemos">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>